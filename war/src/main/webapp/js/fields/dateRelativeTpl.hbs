<input type="text"
  placeholder="#"
  value=""
  pattern="\d+"
  required="required" 
  class="amount form-control">
<select class="custom-select form-control unit">
  {{#each units}}
    <option value="{{value}}" {{#if selected}}selected{{/if}}>{{display}}</option>
  {{/each}}
</select>
<select class="custom-select form-control past-or-present">
  <option value="-1">Ago</option>
  <option value="1">From Now</option>
</select>
