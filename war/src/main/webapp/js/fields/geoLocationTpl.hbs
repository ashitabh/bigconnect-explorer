
{{#if hasGeocoder}}
<input data-optional="true" class="description form-control" type="text" value="{{ value }}" placeholder="{{ i18n 'field.geolocation.form.description' }}">
{{/if}}

<input class="lat form-control" type="text" required pattern="[-.\d]+" value="{{ latitude }}" placeholder="{{ i18n 'field.geolocation.form.latitude' }}">
<input class="lon form-control" type="text" required pattern="[-.\d]+" value="{{ longitude }}" placeholder="{{ i18n 'field.geolocation.form.longitude' }}">

{{#if onlySearchable}}
<input class="radius form-control"
       required
       pattern="[\d.,]+" 
       placeholder="{{ i18n 'field.geolocation.form.radius.placeholder' }}"
       type="text"
       value="{{ radius }}">

<button class="radius-search btn btn-link btn-small">{{ i18n 'field.geolocation.button.radius.search' }}</button>
{{/if}}
