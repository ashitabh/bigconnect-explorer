<label>
    <header>{{ i18n 'dashboard.savedsearches.aggregation' }}</header>
    <button class="btn btn-link btn-mini add-aggregation">{{ i18n 'dashboard.savedsearches.button.add' }}</button>
</label>
<div>
    <div class="form" style="display:none">
        <select class="aggregation form-control">
            {{#each aggregations}}
                <option value="{{ value }}" {{#if selected}}selected{{/if}}>{{ name }}</option>
            {{/each}}
        </select>

        <div class="agg term" style="display:none">
            <div class="property-select"></div>
            <div class="size_selection">
                <input class="size form-control" type="text" value="20" placeholder="Size">
            </div>
            <div class="excluded_selection">
                <input class="excluded form-control" type="text" value="" placeholder="Excluded">
            </div>
        </div>
        <div class="agg histogram" style="display:none">
            <div class="property-select"></div>
            <div class="interval_section" style="display: flex;">
                <input class="interval form-control" type="text" value="20" placeholder="Interval">
                <input style="flex: 1; display: none;" class="date_interval interval_value form-control" type="text"
                       value="20" placeholder="Interval">
                <select class="date_interval interval_units form-control"
                        style="display: none; flex: 1; margin-left: 0.5em; min-width: 6em;">
                    {{#each intervalUnits}}
                        <option value="{{ value }}">{{ label }}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="agg geohash" style="display:none">
            <div class="property-select"></div>
            <select class="precision form-control">
                {{#each precisions}}
                    <option value="{{value}}" {{#if selected}}selected{{/if}}>{{label}}</option>
                {{/each}}
            </select>
        </div>
        <div class="agg statistics" style="display:none">
            <div class="property-select"></div>
        </div>
        <div class="agg sum avg min max" style="display:none">
            <div class="property-select"></div>
            <select class="orderBy form-control">
                <option value="ASCENDING">Ascending</option>
                <option value="DESCENDING">Descending</option>
            </select>
        </div>
    </div>
    <ul class="aggregations"></ul>
</div>
