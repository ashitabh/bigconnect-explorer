<div class="form">
  <div class="errors"></div>

  {{#unless vertex}}
  <div class="vertex-select-container"></div>
  {{/unless}}

  {{#unless property}}
  <div class="property-list"></div>
  {{/unless}}

  <div class="previous-values-container">
    <div class="previous-values m-t-1" style="display:none;">
      <button data-action="add">{{ i18n 'property.form.button.add' }}</button>
      <button data-action="edit" class="edit-previous">{{ i18n 'property.form.button.edit' }} (<span></span>) <small>&#x25BC;</small></button>
    </div>
    <ul class="dropdown-menu" style="display:none"></ul>
  </div>

  <div class="configuration p-t-1"></div>
  <div class="justification"></div>
  <div class="visibility"></div>

  <div class="buttons">
    <button class="btn btn-sm btn-danger delete-btn">{{ i18n 'property.form.button.delete' }}</button>
    <button class="btn btn-sm cancel">{{ i18n 'property.form.button.cancel' }}</button>
    <button class="btn btn-sm btn-primary save-btn {{#if loading}}loading{{/if}}">{{ i18n 'property.form.button.add' }}</button>
  </div>
</div>
