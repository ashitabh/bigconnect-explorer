<label class="half">
  Contains
  <select class="contains custom-select form-control">
    {{#each contains}}
    <option value="{{ value }}"{{#if selected}}selected{{/if}}>{{ display }}</option>
    {{/each}}
  </select>
  <div style="display:none" class="otherSection">
    <span class="otherType"></span> Column
    <select class="otherColumn custom-select form-control">
      {{#each otherColumn}}
      <option value="{{ value }}"{{#if selected}} selected{{/if}}{{#if disabled}} disabled{{/if}}>{{ display }}</option>
      {{/each}}
    </select>
  </div>
</label>
<label class="half">
  Format
  <select class="format custom-select form-control">
    {{#each formats}}
    <option value="{{ value }}"{{#if selected}}selected{{/if}}>{{ display }}</option>
    {{/each}}
  </select>
</label>
