<div class="fileImportPopover popover top collapseVisibility">
    <div class="popover-title">{{ title }}</div>
    <div class="arrow"></div>
    <div class="popover-content show-create-form">

        <div class="create-form">
            <div class="errors"></div>

            {{#unless hasFile}}
                <div class="import-buttons">
                    <div class="file-select-wrapper">
                        <button class="file-select btn btn-link btn-small">
                            {{ i18n 'popovers.file_import.attachfile' }}
                        </button>
                        <input type="file" name="files" class="file form-control" multiple>
                    </div>
                </div>
            {{/unless}}

            <div class="single"></div>

            <div class="apply-to-all m-y-1">
                <label class="custom-control custom-checkbox toggle-collapsed"
                       style="{{#unless multipleFiles}}display:none{{/unless}}">
                    <input type="checkbox" class="copyVisibility custom-control-input"
                           id="inputGlobal" checked/>
                    <span class="custom-control-indicator"></span>
                    {{ i18n 'popovers.file_import.visibility.apply_to_all' }}
                </label>
            </div>

            <div class="individual-visibility"></div>

            <div class="p-t-1">
                <button class="fileimport btn btn-primary">
                    {{~#if hasFile~}}
                        {{ i18n 'popovers.file_import.button.import' }}
                        {{~else~}}
                        {{ i18n 'popovers.file_import.button.nofile.import' }}
                    {{~/if~}}
                </button>
                <button style="display:none" class="filecancel btn btn-default">{{ i18n
                        'popovers.file_import.button.cancel' }}</button>
            </div>
        </div>
    </div>
</div>