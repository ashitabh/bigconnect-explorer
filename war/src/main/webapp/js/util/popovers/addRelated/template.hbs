<div class="addRelatedPopover popover top">
  <div class="popover-title">
    {{ i18n 'popovers.add_related.title' title}}
  </div>
  <div class="arrow"></div>
  <div class="popover-content">
    <div class="errors"></div>

    <div class="concept m-t-1"></div>
    <div class="relationship m-y-1"></div>

    {{#unless multiple}}
        <button style="display:none" class="btn search">{{ i18n 'popovers.add_related.button.search' }}</button>
    {{/unless}}
    <button style="display:none" class="btn btn-primary btn-raised prompt-add">{{ i18n 'popovers.add_related.button.add' }}</button>
    <button class="btn btn-primary btn-raised add">{{ i18n 'popovers.add_related.button.add' }}</button>
    <button style="display:none" class="btn btn-danger btn-raised cancel">{{ i18n 'popovers.add_related.button.cancel' }}</button>
  </div>
</div>

