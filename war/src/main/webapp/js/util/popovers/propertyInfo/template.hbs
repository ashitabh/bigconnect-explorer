<div class="propertyInfoPopover popover top">
  <div class="arrow"></div>
  <div class="popover-content">
    <table class="table"></table>
    <ul class="buttons">

    {{#unless isComment}}
      {{#if canDelete}}
      <li><button class="btn btn-danger btn-sm">{{ i18n 'popovers.property_info.button.delete' }}</button></li>
      {{/if}}

      {{#if canSearch}}
      <li><button class="btn btn-search btn-blue btn-sm">{{ i18n 'popovers.property_info.button.search' }}</button></li>
      {{/if}}

      {{#if canEdit}}
      <li><button class="btn-edit btn btn-primary btn-sm">{{ i18n 'popovers.property_info.button.edit' }}</button></li>
      {{else}}
          {{#unless isVisibility}}
             {{#if canAdd}}
               <li><button class="btn-add btn btn-primary btn-sm">{{ i18n 'popovers.property_info.button.add' }}</button></li>
             {{/if}}
          {{/unless}}
      {{/if}}
    {{/unless}}

    {{#if isComment}}
      {{#if canDelete}}
      <li><button class="btn btn-danger btn-sm">{{ i18n 'popovers.property_info.button.delete' }}</button></li>
      {{/if}}
      {{#if canEdit}}
      <li><button class="editadd btn btn-primary btn-sm btn-edit">{{ i18n 'popovers.property_info.button.edit' }}</button></li>
      {{/if}}
      {{#if canAdd}}
      <li><button class="reply btn btn-secondary btn-sm">{{ i18n 'popovers.property_info.button.reply' }}</button></li>
      {{/if}}
    {{/if}}
    </ul>
  </div>
</div>
